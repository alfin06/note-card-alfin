<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/note_card_title"
        android:text = "Course Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textColor="#2E2E2E"/>

    <Button
        android:id="@+id/edit_subject_name_button"
        android:layout_width="85px"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/note_card_title"
        android:drawableLeft="@drawable/ic_erase"/>

    <TextView
        android:id="@+id/total_note_card"
        android:text = "Total : 15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_card_title"
        android:textSize="8pt"
        android:textColor="#494949"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/total_note_card"/>


</RelativeLayout>
