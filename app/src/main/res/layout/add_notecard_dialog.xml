<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="15px"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingBottom="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#000" />

        <RelativeLayout
            android:id="@+id/RL_NoteCard_Title"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_note_card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="15px"
                android:textColor="#000"
                android:text="@string/notecard_title"/>

            <EditText
                android:id="@+id/add_note_card_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_note_card_text"
                android:paddingTop="15px" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RL_NoteCard_Front"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/RL_NoteCard_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_note_card_text_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="15px"
                android:textColor="#000"
                android:text="@string/front"/>

            <EditText
                android:id="@+id/add_note_card_edit_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_note_card_text_front"
                android:paddingTop="15px" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RL_NoteCard_Back"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/RL_NoteCard_Front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_note_card_text_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="15px"
                android:textColor="#000"
                android:text="@string/back"/>

            <EditText
                android:id="@+id/add_note_card_edit_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_note_card_text_back"
                android:paddingTop="15px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL_NoteCard_Date"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/RL_NoteCard_Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add_note_card_date"
                tools:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>